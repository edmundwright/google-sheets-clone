<h1 class="colon">:</h1>

<% if (editing) { %>
  <form>
    <input class="title"
      type="text"
      name="spreadsheet[title]"
      value="<%= spreadsheet.escape("title") %>">
  </form>
<% } else if (spreadsheet.get("title")) { %>
  <h1 class="title"><%= spreadsheet.escape("title") %></h1>
<% } else { %>
  <h1 class="title">Loading...</h1>
<% } %>
